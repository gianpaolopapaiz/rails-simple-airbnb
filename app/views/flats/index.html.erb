<h1>All our Flats</h1>
<p>All <%= @flats.length %> flats</p>
<div>
<% @flats.each do |flat| %>
  <div class="card">
		<div class= "card-img">
			<p>Imagem</p>
		</div> 
		<div class='card-info'>
			<h3><%= flat.name %></h3>
		<div>
		<div class='card-links'>
			<%= link_to 'More info', flat_path(flat) %>
			<%= link_to 'Edit', edit_flat_path(flat) %>
			<%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
		
	</div>
<% end %>

</div>